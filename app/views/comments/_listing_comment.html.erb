<div class="listing-comments" id="comments">
  <ul>
  <% @post.comments.all.each do |comment| %> 
    <li id="comment_<%= comment.id %>">
       <p class="comment-name"><%= comment.name %><span> <%= comment.created_at %></span></p>
      <p class="comment-content" ><%= comment.content %></p>
      <% if current_user %><p><%= link_to 'Delete',delete_comment_path(@post.id,comment.id), method: :delete, :remote => true %> </p><% end %>
    </li>
  <% end %>
  </ul>
</div>

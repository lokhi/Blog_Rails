<div class="form">
<p>Create a new post</p>
<%= form_tag("/posts", :method => "post") do %>
<%= label(:post,:title, "title :") %>
<%= text_field(:post, :title, :size => 55,:class => "form-field") %>
<br /><br />
<%= label(:post,:body, "content :", :id => "labelarea") %>
<%= text_area(:post, :body,:size => "55x10", :class => "form-field") %>
<p class="end"></p><br />
<%= label(:tags,:name, "tags :") %>
<%= text_field(:tags,:name, :size => 55,:class => "form-field") %>
<br />
<%= submit_tag("New Post",:class => "form-submit") %>
<% end %>
</div>
<div class="backlink">
  <p><%= link_to 'Back to home',posts_path %></p>
</div>
